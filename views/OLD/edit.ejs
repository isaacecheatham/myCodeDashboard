<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= link.title %></div>
    <form class="ui form" action="/dashboard/<%= link._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Parent Title</label>
            <input type="text" name="link[title]" value="<%= link.title %>">
        </div>
        
       <div class="field">
            <label>Link Title</label>
            <input type="text" name="link[name]" value="<%= link.name %>">
        </div>
        
        <div class="field">
            <label>URL</label>
            <input type="text" name="link[url]" value="<%= link.url %>">
        </div>

        <input class="ui blue big basic button" type="submit" value="SUBMIT">
    </form>
</div>
<% include ./partials/footer %>
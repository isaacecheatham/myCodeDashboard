<!--LOGIN FORM MODAL-->

<div class="ui tiny modal" id="login_modal">
    <i class="close icon"></i>
    <div class="header">
        Login
    </div>
    <div class="content">
        <form class="ui form">
            <div class="field">
                <label>Username</label>
                <input type="text" name="first-name" placeholder="Username">
            </div>
            <div class="field">
                <label>Password</label>
                <input type="text" name="last-name" placeholder="Password">
            </div>
            <div class="actions">
                <div class="ui black deny button">
                    Go Back
                </div>
                <button type="submit" class="ui positive right labeled icon button">
                    Log me in!
                    <i class="checkmark icon"></i>
                </button>
            </div>
        </form>
    </div>
</div>


<!--DELETE FORM MODAL-->

<div class="ui basic modal" id="delete_modal">
    <div id="itemToDelete" class="ui icon header">
    </div>
    <form id="deleteForm" action="" method="POST">
        <div class="actions ui center aligned grid">
            <div id="deleteNo" class="ui red basic cancel inverted button">
                <i class="remove icon"></i> No
            </div>
            <button type="submit" class="ui basic green ok inverted button">
                <i class="checkmark icon"></i> Yes
            </button>
        </div>
    </form>
</div>


<!--NEW MENU FORM MODAL-->

<div class="ui tiny modal" id="new_menu_modal">
    <i class="close icon"></i>
    <div class="header">
        Create a Menu
    </div>
    <div class="content">
        <form class="ui form" action="/dashboard/new_menu" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="menu[title]">
